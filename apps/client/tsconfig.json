{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "../../shared/**/*.json",
    "../../shared/**/*.ts",
    "../../shared/**/*.schema.js",
    "../../global.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["./app/pages/*"],
      "@components/*": ["./app/components/*"],
      "@common/*": ["./app/common/*"],
      "@store/*": ["./app/store/*"],
      "@shared": ["../../shared"],
      "@api": ["../../shared/api"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
